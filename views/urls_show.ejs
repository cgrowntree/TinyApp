<!-- views/urls_show.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_header %>
  </head>
  <% if (user_id) { %>
  <body>
    <ul>
      <p>ShortURL: <strong><%= shortURL %></strong></p>
      <form method="POST" action="/urls/<%= shortURL %>">
        <label for="longURL"></label>
        <input id="longURL" type="text" name="longURL" placeholder="http://" style="width: 200px">
        <input type="submit" value="Update">
    </ul>
  </body>
  <% } %>
</html>