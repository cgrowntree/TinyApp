<!-- views/urls_index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_header %>
  </head>
  <% if (user_id) { %>
  <body>
    <table>
      <% Object.keys(urls).forEach(function(id) { %>
        <% var urlObj = urls[id] %>
        <tr>
        <td><%= urlObj.shortURL %> → <%= urlObj.longURL %></td>
        <% if(urlObj.userID === user_id) { %>
          <td><a href='/urls/<%= urlObj.shortURL %>'>Edit</a></td>
          <td>
            <form method="POST" action="/urls/<%= urlObj.shortURL %>/delete" style="display:inline-block"><button type='submit'>Delete 🗑 ️</button>
            </form>
          </td>
        <% } %>
        </tr>
      <% }); %>
      </table>
    <a href="/urls/new">Create new short URL here</a>
  </body>
  <% } %>
</html>