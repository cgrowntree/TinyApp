<!-- views/urls_index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_header %>
  </head>
  <body>
    <table>
      <% Object.keys(urls).forEach(function(key) { %>
        <tr>
        <td><%= key %> → <%= urls[key] %></td>
        <td><a href='/urls/<%= key %>'>Edit</a></td>
          <td><form method="POST" action="/urls/<%= key %>/delete" style="display:inline-block"><button type='submit'>Delete 🗑 ️</button></form></td>
        </tr>
      <% }); %>
      </table>
    <a href="/urls/new">Create new short URL here</a>
  </body>
</html>